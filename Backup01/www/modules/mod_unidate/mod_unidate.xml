<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
	<name>unidate</name>
	<author>style13</author>
	<creationDate>February 2009</creationDate>
	<copyright>Copyright (C) 2008 - 2009 Style13. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>webmaster@style13.com</authorEmail>
	<authorUrl>www.style13.com</authorUrl>
	<version>1.0</version>
	<description>Module to display date in native language format, based on installed languages packs. You can also add greeting above the date. Have a fun.</description>
	<files>
	 	<filename module="mod_unidate">mod_unidate.php</filename>
		<filename>mod_unidate.xml</filename>
		<filename>helper.php</filename>
		<filename>params.ini</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/notitle.php</filename>
	</files>
	
	<params>
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
	</params>
	<params group="advanced">
		<param name="display_title" type="radio" default="0" label="Allow Title" description="Display title above date?">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="title_type" type="list" default="0" size="50" label="Title type" description="Change title tag wrapper. H1, H2, H3 are restricted to place inside modules, according to strict XHTML content validation!">
			<option value="0">H4</option>
			<option value="1">DIV</option>
			<option value="2">SPAN</option>
			<option value="3">P</option>
		</param>
		<param name="date_title" type="text" default="" size="50" label="Title text" description="You can add your own greeting above the date." />
	</params>
</install>
